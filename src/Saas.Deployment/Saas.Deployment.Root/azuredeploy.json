{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SaasProviderName": {
      "type": "string",
      "defaultValue": "contoso"
    },
    "Environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "staging",
        "test",
        "prod"
      ]
    },
    "Location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the Cosmos DB account."
      }
    },
    "InstanceNumber": {
      "type": "string",
      "defaultValue": "001"
    },
    "CosmosDbAccountName": {
      "type": "string",
      "defaultValue": "[concat('cosmos-', parameters('SaaSProviderName'), '-', parameters('Environment'), '-', parameters('InstanceNumber'))]",
      "metadata": {
        "description": "Cosmos DB account name"
      }
    },
    "CosmosDbDatabaseName": {
      "type": "string",
      "metadata": {
        "description": "The name for the Core (SQL) database"
      }
    }
  },
  "variables": {
    "parametersProviderWebApp": {
      "SaasProviderName": { "value": "[parameters('SaasProviderName')]" },
      "Environment": { "value": "[parameters('Environment')]" },
      "InstanceNumber": { "value": "[parameters('InstanceNumber')]" }
    },
    "parametersCosmosDb": {
      "SaasProviderName": { "value": "[parameters('SaasProviderName')]" },
      "Environment": { "value": "[parameters('Environment')]" },
      "Location": { "value": "[parameters('Location')]" },
      "InstanceNumber": { "value": "[parameters('InstanceNumber')]" },
      "CosmosDbAccountName": { "value": "[parameters('CosmosDbAccountName')]" },
      "CosmosDbDatabaseName": { "value": "[parameters('CosmosDbDatabaseName')]" }
    }
  },
  "resources": [
    {
      "name": "deployProviderWebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/azure-saas/main/src/Saas.Provider/Saas.Provider.Web.Deployment/azuredeploy.json"
        },
        "parameters": "[variables('parametersProviderWebApp')]",
        "mode": "Incremental"
      },
      "tags": {}
    },
    {
      "name": "deployCosmosDb",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/azure-saas/main/src/Saas.OnboardingFlow/Saas.OnboardingFlow.CosmosDb.Deployment/azuredeploy.json"
        },
        "parameters": "[variables('parametersCosmosDb')]",
        "mode": "Incremental"
      },
      "tags": {}
    }

  ],
  "outputs": {}
}
